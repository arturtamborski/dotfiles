---

pre:
  config: "~/.config"
  backup: "backup/{{ ansible_date_time.date }}.zip"




user_dirs:
  documents: "docs"
  music: "docs/music"
  public: "docs/shared"
  videos: "docs/videos"
  desktop: "docs/desktop"
  pictures: "docs/pictures"
  downloads: "docs/downloads"
  templates: "docs/templates"

  install:
    self:
      packages:
        - "xdg-utils"

  configure:
    global:
      src: "user-dirs/templates/config"
      dst: "{{ pre.config }}/user-dirs.dirs"




