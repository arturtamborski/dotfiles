---

pre:
  config: "~/.config"

  backup: "backup/{{ ansible_date_time.date }}.zip"



less:
  install:
    self:
      packages:
        - "less"

  configure:
    self:
      src: "less/files/history"
      dst: "~/.config/less/history"




apt:
  dependencies:
    - "curl"
    - "wget"
    - "dirmngr"
    - "apt-transport-https"
    - "aptitude"




bash:
  histfile: "~/.config/bash/history"

  install:
    self:
      packages:
        - "bash"

  configure:
    global:
      src: "bash/templates/global"
      dst: "/etc/bash.bashrc"
      become: yes
    self:
      src: "bash/templates/config"
      dst: "~/.config/bash/config"




zsh:
  install:
    self:
      packages:
        - "zsh"

  configure:
    self:
      src: "zsh/templates/config"
      dst: "~/.config/zsh/config"




ssh:
  user: "artur"

  install:
    self:
      packages:
        - "openssh-client"
        - "openssh-server"

  configure:
    ssh:
      src: "/ssh/templates/ssh_config"
      dst: "/etc/ssh/ssh_config"
    sshd:
      src: "/ssh/templates/sshd_config"
      dst: "/etc/ssh/sshd_config"
    self:
      src: "/ssh/templates/config"
      dst: "~/.config/ssh/config"

  move:
    known_hosts:
      src: "~/.ssh/known_hosts"
      dst: "{{ ssh.configure.self.dst | dirname }}/known_hosts"
    authorized_keys:
      src: "~/.ssh/authorized_keys"
      dst: "{{ ssh.configure.self.dst | dirname }}/authorized_keys"



git:
  name: "Artur Tamborski"
  email: "tamborskiartur@gmail.com"

  install:
    self:
      packages:
        - "git"

  configure:
    self:
      src: "git/templates/config"
      dst: "~/.config/git/config"
    ignore:
      src: "git/files/ignore"
      dst: "~/.config/git/ignore"




fzf:




