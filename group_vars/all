    global:
      src: "tlp/templates/config"
      dst: "/etc/default/tlp"
      become: yes




bash:
  histfile: "{{ pre.config }}/bash/history"

  install:
    self:
      packages:
        - "bash"

  configure:
    global:
      src: "bash/templates/global"
      dst: "/etc/bash.bashrc"
      become: yes
    self:
      src: "bash/templates/config"
      dst: "{{ pre.config }}/bash/config"




