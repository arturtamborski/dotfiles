ssh:
  install:
    self:
      packages:
        - "openssh-client"
        - "openssh-server"

  configure:
    ssh:
      src: "ssh/templates/ssh_config"
      dst: "/etc/ssh/ssh_config"
      become: yes
    sshd:
      src: "ssh/templates/sshd_config"
      dst: "/etc/ssh/sshd_config"
      become: yes
    self:
      src: "ssh/templates/config"
      dst: "~/.config/ssh/config"

  move:
    known_hosts:
      src: "~/.ssh/known_hosts"
      dst: "~/.config/ssh/known_hosts"
    authorized_keys:
      src: "~/.ssh/authorized_keys"
      dst: "~/.config/ssh/authorized_keys"




git:
  name: "Artur Tamborski"
  email: "tamborskiartur@gmail.com"

  install:
    self:
      packages:
        - "git"

  configure:
    self:
      src: "git/templates/config"
      dst: "~/.config/git/config"
    ignore:
      src: "git/files/ignore"
      dst: "~/.config/git/ignore"
    pre-push:
      src: "git/files/hooks/pre-push"
      dst: "~/.config/git/hooks/pre-push"




